<Window x:Class="Personal_Task_Manager.Views.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager.Views"
        xmlns:viewModel="clr-namespace:Personal_Task_Manager.ViewModel" mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:AddTaskViewModel}" Title="Add Task" Height="600" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">
    <Border Padding="24" Background="{DynamicResource AccentDarkOver}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <Label Content="Title" Target="{Binding ElementName=TitleBox}" Style="{StaticResource Heading1}" />
                <TextBox x:Name="TitleBox" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"
                        Style="{StaticResource TextBoxStyle}" />
            </StackPanel>

            <!-- Description -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <Label Content="Description" Target="{Binding ElementName=DescriptionBox}"
                        Style="{StaticResource Heading1}" />
                <TextBox x:Name="DescriptionBox" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                        Height="80" AcceptsReturn="True" TextWrapping="Wrap" Style="{StaticResource TextBoxStyle}" />
            </StackPanel>

            <!-- Category -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <Label Content="Category" Target="{Binding ElementName=CategoryBox}" Style="{StaticResource Heading1}" />
                <ComboBox x:Name="CategoryBox" ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}"/>
            </StackPanel>

            <!-- Importance -->
            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                <Label Content="Importance" Target="{Binding ElementName=ImportanceBox}"
                        Style="{StaticResource Heading1}" />
                <ComboBox x:Name="ImportanceBox" ItemsSource="{Binding Importances}"
                        SelectedItem="{Binding SelectedImportance}" />
            </StackPanel>

            <!-- Due Date -->
            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                <Label Content="Due Date" Target="{Binding ElementName=DueDateBox}" Style="{StaticResource Heading1}" />
                <DatePicker x:Name="DueDateBox" SelectedDate="{Binding DueDate}" />
            </StackPanel>

            <!-- Spacer -->
            <Grid Grid.Row="5" />

            <!-- Buttons -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Save" Command="{Binding AddTaskCommand}" Style="{StaticResource AddTaskButtonStyle}"
                        Margin="0,0,12,0" />
                <Button Content="Save and Close" Command="{Binding AddTaskAndCloseCommand}"
                        Style="{StaticResource AddTaskButtonStyle}" 
                        Margin="0 0 12 0"/>
                <Button Margin="0 0 12 0" Content="Cancel" Command="{Binding CancelCommand}"
                        Style="{StaticResource AddTaskButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
