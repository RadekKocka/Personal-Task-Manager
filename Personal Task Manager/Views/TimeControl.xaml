<UserControl x:Class="Personal_Task_Manager.Views.TimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personal_Task_Manager.Views"
             xmlns:viewModels="clr-namespace:Personal_Task_Manager.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             d:DataContext="{d:DesignInstance Type=viewModels:TimeControlViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Time elapsed" />
            <TextBlock Text="{Binding ElapsedTime}" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Time remaining" />
            <TextBlock Text="{Binding RemainingTime}" />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="Current time" />
            <TextBlock Text="{Binding CurrentTime}" />
        </StackPanel>
    </Grid>
</UserControl>
