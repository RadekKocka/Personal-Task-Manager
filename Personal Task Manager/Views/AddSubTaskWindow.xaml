<Window x:Class="Personal_Task_Manager.Views.AddSubTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager.Views"
        xmlns:vm="clr-namespace:Personal_Task_Manager.ViewModel"
        xmlns:controls="clr-namespace:Personal_Task_Manager.Controls"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF" mc:Ignorable="d"
        Title="AddSubTaskWindow" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance vm:AddSubTaskItemViewModel, IsDesignTimeCreatable=False}"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Border Padding="10" CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1" ColorInterpolationMode="SRgbLinearInterpolation"
                    MappingMode="RelativeToBoundingBox">
                <GradientStop Color="{StaticResource AccentDarkColor}" Offset="1" />
                <GradientStop Color="{StaticResource AccentDarkOverColor}" Offset="0.5" />
                <GradientStop Color="{StaticResource AccentDarkClickColor}" Offset="0.3" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid Margin="5 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <controls:WatermarkTextBox x:Name="TaskDescription" Grid.Row="0" Height="40" VerticalAlignment="Center"
                    Width="300" FontSize="16" Margin="5" Watermark="Task description"
                    Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}" />
            <DockPanel Grid.Row="1" Height="50" HorizontalAlignment="Center">
                <Button Style="{StaticResource AddTaskButtonStyle}" VerticalContentAlignment="Center" Height="25"
                        Width="100" Command="{Binding SaveSubTaskCommand}">
                    <!-- Create a custom control for this (Material icons do not have vertically centered text) -->
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <icons:MaterialIconTextExt Kind="ContentSaveAdd" />
                            <TextBlock Text="Save" VerticalAlignment="Center" FontSize="14" Margin="5 0" />
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource AddTaskButtonStyle}" Height="25" Width="100" Margin="15 0"
                        Command="{Binding CancelCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <icons:MaterialIconTextExt Kind="Cancel" />
                            <TextBlock Text="Cancel" VerticalAlignment="Center" FontSize="14" Margin="5 0" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </DockPanel>
        </Grid>
    </Border>
</Window>
