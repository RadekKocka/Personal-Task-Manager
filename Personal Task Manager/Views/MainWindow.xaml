<Window x:Class="Personal_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager"
        xmlns:viewModels="clr-namespace:Personal_Task_Manager.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="435"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                x:Name="NavPanel" 
                Background="{StaticResource NavPanelBackground}">

        </Border>
        <Border Grid.Column="1" 
                x:Name="TaskList" 
                Background="{StaticResource TaskListBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Tasks" VerticalAlignment="Center" FontSize="22" FontWeight="Bold" />
                <Border Grid.Row="1" CornerRadius="15" Background="{StaticResource WindowBackground}">
                    <Grid>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 Panel.ZIndex="1"
                                 Style="{StaticResource TextBoxStyle}"/>
                        <TextBlock Style="{StaticResource PlaceHolderTextStyle}" />
                    </Grid>
                </Border>
                <Border Grid.Row="2">
                    <ItemsControl ItemsSource="{Binding TasksView}"
                                  ItemTemplate="{StaticResource TaskItemStyle}"/>
                </Border>
            </Grid>
        </Border>


        <Border Grid.Column="2" 
                x:Name="TaskListDetails" 
                Background="{StaticResource WindowBackground}"/>
        <Border Grid.Column="3" 
                x:Name="TaskStatus" 
                Background="{StaticResource TaskStatusBackground}"/>
    </Grid>
</Window>
