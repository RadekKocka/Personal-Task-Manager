<Window x:Class="Personal_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager"
        xmlns:viewModels="clr-namespace:Personal_Task_Manager.ViewModel"
        xmlns:controls="clr-namespace:Personal_Task_Manager.Controls"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="832"
        Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="435" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                x:Name="NavPanel"
                Background="{StaticResource NavPanelBackground}">
        </Border>

        <Border Grid.Column="1"
                x:Name="TaskList"
                Background="{StaticResource TaskListBackground}">
            <Grid Margin="10 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Tasks"
                               VerticalAlignment="Center"
                               FontSize="22"
                               FontWeight="Bold" />
                    <Button Grid.Column="1"
                            Style="{StaticResource AddTaskButtonStyle}"
                            Command="{Binding AddTaskCommand}"
                            Height="30"
                            Width="30"
                            ToolTip="Add new task"
                            Content="{icons:MaterialIconExt Kind=Plus}">
                    </Button>
                </Grid>
                <controls:WatermarkTextBox Grid.Row="1"
                                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                           Watermark="Search..."
                                           MinHeight="25"
                                           Height="35"
                                           FontSize="16"
                                           Padding="5" />
                <Border Grid.Row="2">
                    <ItemsControl ItemsSource="{Binding TasksView}"
                                  ItemTemplate="{StaticResource TaskItemStyle}" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                x:Name="TaskListDetails"
                Background="{StaticResource WindowBackground}" />
        <Border Grid.Column="3"
                x:Name="TaskStatus"
                Background="{StaticResource TaskStatusBackground}" />
    </Grid>
</Window>
