<Window x:Class="Personal_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager"
        xmlns:viewModels="clr-namespace:Personal_Task_Manager.ViewModel"
        xmlns:controls="clr-namespace:Personal_Task_Manager.Controls"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="832"
        Width="1280"
        MinWidth="805"
        MinHeight="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="435" />
            <ColumnDefinition Width="*"
                              MinWidth="150" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                x:Name="NavPanel"
                Background="{StaticResource AccentDark}">
        </Border>

        <Border Grid.Column="1"
                x:Name="TaskList"
                Background="{StaticResource TaskListBackground}">
            <Grid Margin="10 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Style="{StaticResource Heading1}"
                       Content="Tasks"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False" />
                <Button Style="{StaticResource AddTaskButtonStyle}"
                        Command="{Binding AddTaskCommand}"
                        Height="30"
                        Width="30"
                        HorizontalAlignment="Right"
                        ToolTip="Add new task"
                        Content="{icons:MaterialIconExt Kind=PlaylistAdd,Size=25}">
                </Button>
                <controls:WatermarkTextBox Grid.Row="1"
                                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                           Watermark="Search..."
                                           MinHeight="25"
                                           Height="35"
                                           FontSize="16"
                                           Padding="5" />

                <ListBox Grid.Row="2"
                         ItemsSource="{Binding TasksView}"
                         ItemTemplate="{StaticResource TaskItemStyle}"
                         Style="{StaticResource MainListViewStyle}"
                         SelectedItem="{Binding SelectedTask}"
                         ItemContainerStyle="{StaticResource MainListViewItemStyle}"
                         SelectionMode="Single"
                         VerticalContentAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown">
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                Style="{StaticResource SelectedTaskAnimatedBorderStyle}">
            <Border.RenderTransform>
                <ScaleTransform ScaleY="1" />
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="230" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <ContentControl Grid.Row="0"
                                Content="{Binding SelectedTask}"
                                ContentTemplate="{StaticResource TaskItemDetailsStyle}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />
                <ListBox Grid.Row="1"
                         Margin="15 0"
                         Style="{StaticResource SubTasksListStyle}"
                         ItemContainerStyle="{StaticResource SubListTaskItem}"
                         ItemTemplate="{StaticResource SubListTaskDataTemplate}"
                         ItemsSource="{Binding SelectedTask.SubTasks}">
                </ListBox>
            </Grid>
        </Border>
        <Border Grid.Column="3"
                x:Name="TaskStatus"
                Background="{StaticResource TaskStatusBackground}" />
    </Grid>
</Window>
