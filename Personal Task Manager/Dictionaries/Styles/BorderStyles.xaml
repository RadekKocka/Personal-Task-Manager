<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SelectedTaskAnimatedBorderStyle"
           TargetType="{x:Type Border}">
        <Setter Property="Background"
                Value="{StaticResource WindowBackground}" />
        <Setter Property="Opacity"
                Value="1" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding SelectedTask}"
                         Value="{x:Null}">
                <Setter Property="Background"
                        Value="{StaticResource AccentDark}" />
                <DataTrigger.ExitActions>
                    <StopStoryboard BeginStoryboardName="FadeInStoryBoard" />
                    <BeginStoryboard Name="FadeInStoryBoard">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Border.Opacity)"
                                             From="0"
                                             To="1"
                                             Duration="0:0:0.3" />
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
                <DataTrigger.EnterActions>
                    <StopStoryboard BeginStoryboardName="FadeInStoryBoard" />
                </DataTrigger.EnterActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>