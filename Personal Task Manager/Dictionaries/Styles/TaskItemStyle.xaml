<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Personal_Task_Manager.Models"
                    xmlns:converters="clr-namespace:Personal_Task_Manager.Dictionaries.Converters"
                    xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Dictionaries/Styles/ButtonStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="TaskItemStyle"
                  DataType="{x:Type local:TaskItem}">
        <DataTemplate.Resources>
            <converters:DateTimeCultureConverter x:Key="DateTimeCultureConverter" />
        </DataTemplate.Resources>
        <Grid MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{Binding Title}"
                           FontSize="22"
                           FontWeight="Bold"
                           FontFamily="Sans Serif"
                           VerticalAlignment="Center"
                           TextDecorations="Underline"/>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Right">
                    <TextBlock Text="{Binding DueDate, Converter={StaticResource DateTimeCultureConverter}}"
                               FontSize="13"
                               FontFamily="Sans Serif"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="10 0" />
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Cursor="Hand"
                            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource DeleteButtonStyle}"
                            Content="{icons:MaterialIconExt Kind=TrashCanOutline}"
                            Height="25"
                            Width="25">
                    </Button>
                </StackPanel>
            </Grid>
            <TextBlock Grid.Row="2"
                       Padding="10 0 10 8"
                       Text="{Binding Description}"
                       TextWrapping="Wrap"
                       TextAlignment="Justify"
                       MinHeight="20" 
                       MaxHeight="100"
                       FontSize="14"
                       FontFamily="Sans Serif"
                       TextTrimming="WordEllipsis"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="TaskItemDetailsStyle"
                  DataType="{x:Type local:TaskItem}">
        <StackPanel Orientation="Vertical"
                    Margin="10">
            <DockPanel>
                <TextBlock Text="{Binding Title}"
                           FontSize="22"
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left" />
                <TextBlock Text="{Binding Importance}"
                           HorizontalAlignment="Right"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Margin="0 0 10 0" />
            </DockPanel>
            <TextBlock Grid.Row="1"
                       Text="{Binding Description}" />

        </StackPanel>

    </DataTemplate>
</ResourceDictionary>