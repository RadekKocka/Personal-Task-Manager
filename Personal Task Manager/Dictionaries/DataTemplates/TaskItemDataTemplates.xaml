<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:Personal_Task_Manager.Models"
                    xmlns:viewModels="clr-namespace:Personal_Task_Manager.ViewModel"
        xmlns:converters="clr-namespace:Personal_Task_Manager.Dictionaries.Converters"
        xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Dictionaries/Styles/ButtonStyle.xaml" />
        <ResourceDictionary Source="/Dictionaries/Styles/TextBoxStyle.xaml" />
        <ResourceDictionary Source="/Dictionaries/Colours.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:DateTimeCultureConverter x:Key="DateTimeCultureConverter" />
    <converters:ImportanceBackgroundConverter x:Key="ImportanceBackgroundConverter" />

    <DataTemplate x:Key="TaskItemDataTemplate" DataType="{x:Type viewModels:TaskItemViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="22" FontWeight="Bold"
                        FontFamily="Sans Serif" VerticalAlignment="Center" TextDecorations="Underline" />
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding DueDate, Converter={StaticResource DateTimeCultureConverter}}"
                            FontSize="13" FontFamily="Sans Serif" VerticalAlignment="Center" HorizontalAlignment="Right"
                            Margin="10 0" />
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand"
                            Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" Style="{StaticResource DeleteButtonStyle}"
                            Content="{icons:MaterialIconExt Kind=TrashCanOutline}" Height="25" Width="25">
                    </Button>
                </StackPanel>
            </Grid>
            <TextBlock Grid.Row="2" Padding="10 0 10 8" Text="{Binding Description}" TextWrapping="Wrap"
                    TextAlignment="Justify" MinHeight="20" MaxHeight="100" FontSize="14" FontFamily="Sans Serif"
                    TextTrimming="WordEllipsis" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="TaskItemDetailsDataTemplate" DataType="{x:Type viewModels:TaskItemViewModel}">
        <StackPanel Margin="20">
            <Grid Margin="0 0 0 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="22" FontWeight="Bold"
                        FontFamily="Sans Serif" HorizontalAlignment="Left" VerticalAlignment="Center"
                        TextDecorations="Underline" />
                <Border CornerRadius="7" Grid.Column="1" HorizontalAlignment="Right"
                        Background="{Binding Importance, Converter={StaticResource ImportanceBackgroundConverter}}"
                        Width="150">
                    <Label Content="{Binding Importance}" HorizontalAlignment="Center" FontSize="18"
                            VerticalAlignment="Center" Background="Transparent" />
                </Border>
            </Grid>
            <TextBlock Grid.Row="1" Text="{Binding Description}" TextWrapping="Wrap" DockPanel.Dock="Bottom"
                    TextAlignment="Justify" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="SubListTaskDataTemplate" DataType="{x:Type viewModels:TaskCheckListViewModel}">
        <StackPanel Orientation="Horizontal">
            <Border Cursor="Hand" Margin="5 2 10 2" Height="25" Width="25">
                <CheckBox IsChecked="{Binding IsComplete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <CheckBox.Style>
                        <Style TargetType="{x:Type CheckBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                        <Border CornerRadius="10" Background="Transparent">
                                            <icons:MaterialIcon Kind="TickCircle" Foreground="Green" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger
                                        Binding="{Binding IsComplete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Value="False">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type CheckBox}">
                                                <icons:MaterialIcon Kind="Circle" Foreground="White" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>
            </Border>
            <TextBlock Text="{Binding Description}" VerticalAlignment="Center" FontFamily="Consolas" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>