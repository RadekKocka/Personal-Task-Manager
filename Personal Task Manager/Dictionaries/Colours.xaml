<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="AccentDark" Color="#FF164863"/>
    <SolidColorBrush x:Key="AccentDarkOver" Color="#FF396A84"/>
    <SolidColorBrush x:Key="AccentDarkClick" Color="#FF66A3C5"/>
    <SolidColorBrush x:Key="TaskListBackground" Color="#FFECECEC"/>
    <SolidColorBrush x:Key="WindowBackground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TaskStatusBackground" Color="#FFF6F6F6"/>
    <SolidColorBrush x:Key="DefaultText" Color="#FF474747"/>
    <SolidColorBrush x:Key="OnAccent" Color="#FFFFFFFF"/>

    <!-- Task importance colors-->
    <SolidColorBrush x:Key="LowImportance" Color="#FF0CAFF4"/>
    <SolidColorBrush x:Key="MediumImportance" Color="#FF2AD985"/>
    <SolidColorBrush x:Key="HighImportance" Color="#FFF4B30C"/>
    <SolidColorBrush x:Key="CriticalImportance" Color="#FFCA2C2C"/>

    <!-- Task status colors-->
    <SolidColorBrush x:Key="InProgress" Color="#FF518657"/>
    <SolidColorBrush x:Key="Completed" Color="#FF4187AC"/>
    <SolidColorBrush x:Key="NotStarted" Color="#FF818181"/>
    <SolidColorBrush x:Key="Late" Color="#FF846461"/>
    <SolidColorBrush x:Key="Archived" Color="#FFC8A36C"/>
    <SolidColorBrush x:Key="Deleted" Color="#FF606060"/>

</ResourceDictionary>