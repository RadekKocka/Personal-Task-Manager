<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                   xmlns:local="clr-namespace:Personal_Task_Manager.Models">

    <DataTemplate x:Key="TaskItemStyle" DataType="{x:Type local:TaskItem}">
        <Border>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="Bold" FontFamily="Consolas"/>
                <TextBlock Text="{Binding Description}"/>
            </StackPanel>
        </Border>
    </DataTemplate>  
</ResourceDictionary>